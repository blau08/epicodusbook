<div class="container">
  <div class="row">
    <header class="jumbotron hero-spacer text-center">
      <h1>Beyond Class</h1>
      <p>A look at our journey after Epicodus</p>
      <!-- <%= link_to "New Category", new_category_path, class: "btn btn-primary" %> -->
    </header>
  </div>
  <div class="row text-center">
    <table class="table">
      <thead>
        <tr>
          <th class="text-center"><%= sortable "id ", "#" %></th>
          <th class="text-center"><%= sortable "lastname", "Last Name" %></th>
          <th class="text-center"><%= sortable "firstname", "First Name" %></th>
          <th class="text-center"><%= sortable "age", "Age*" %></th>
          <th class="text-center"><%= sortable "gender", "Gender" %></th>
          <th class="text-center"><%= sortable "cohort", "Cohort" %></th>
          <th class="text-center"><%= sortable "internship", "Internship" %></th>
          <th class="text-center"><%= sortable "company", "Company" %></th>
        </tr>
      </thead>
      <tbody>
        <% @students.each_with_index do |student, i| %>
          <tr>
            <td><%= (i+1) %></td>
            <td><%= student.lastname %></td>
            <td><%= student.firstname %></td>
            <td><%= student.age %></td>
            <td><%= student.gender %></td>
            <td><%= student.cohort %></td>
            <td><%= student.internship %></td>
            <td><%= student.company %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <hr>

  <div class="row text-center">
    <!-- Column Chart -->
    <div class="col-xs-6">
      <h3>Age Of Students</h3>
      <%= column_chart @students_bar.group(:age).count %>
    </div>
    <div class="col-xs-6">
      <h3>Gender Ratio</h3>
      <%= pie_chart @students_bar.group(:gender).count %>
    </div>
    <!-- Bar Chart -->

  </div>
  <footer>
    <p>*Rough estimate as of 1/1/2016</p>
  </footer>
</div>
