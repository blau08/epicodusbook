<div class="container text-center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter Your Email' %>
      </div>
      <br>
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Enter Your Password' %>
      </div>
      <br>
      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>
      <br>
      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-default' %>
      </div>
      <% end %>
      <br>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
