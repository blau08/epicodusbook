<% content_for(:title, "EpicodusBook | Student") %>

<div class="container text-center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h1><%= @profile.name%></h1>
      <h1><%= @profile.quote%></h1>
      <h1><%= image_tag @profile.image%></h1>

      <p>
        <%= link_to "Return to students", students_path %>
      </p>
      <p>
        <%= link_to "New Comment", new_profile_comment_path(@profile), id: "enter-comment-link", remote: true, class: "btn btn-primary" %>
      </p>

      <div id="show-comments">
        <%= render '/comments/comments' %>
      </div>



    </div>
  </div>
</div>
